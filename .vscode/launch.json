    "version": "0.2.0",
    "configurations": [


        {
            "name": "standard",
            "type": "python",
            "request": "launch",
            "module": "hannah.train",
            "args": [
                "trainer.limit_train_batches=0.1",
                "trainer.max_epochs=3",
                "model=tc-res8"
            ]
        },
        {
            "name": "multi_gpu",
            "type": "python",
            "request": "launch",
            "module": "hannah.train",
            "args": [
                "trainer.gpus=[0,1]",
                "trainer.limit_train_batches=0.1",
                "trainer.limit_val_batches=0.1",
                "trainer.limit_test_batches=0.1",
                "trainer.max_epochs=3",
                "+trainer.strategy='ddp_spawn'"
            ]
        },
        {
            "name": "kd",
            "type": "python",
            "request": "launch",
            "module": "hannah.train",
            "args": [
                "--config-name",
                "config_kd",
                "trainer.limit_train_batches=0.1",
                "trainer.max_epochs=3",
                "model=tc-res4"
            ]
        },
        {
            "name": "object_detection",
            "type": "python",
            "request": "launch",
            "module": "hannah.train",
            "justMyCode": false,
            "args": [
                "--config-name",
                "config_object_detection",
                "dataset.data_folder=/local/datasets"
            ]
        },
    ]
}
