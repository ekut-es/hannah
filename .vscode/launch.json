{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [


        {
            "name": "standard",
            "type": "python",
            "request": "launch",
            "module": "hannah.train",
            "args": [
                "trainer.limit_train_batches=1.0",
                "model=timm_resnet152",
                "trainer.max_epochs=3",
                "svd_rank_compression=4",
                "dataset=kvasir_capsule",
                "clustering=false"
            ]
        },
        {
            "name": "svd",
            "type": "python",
            "request": "launch",
            "module": "hannah.svd_train",
            "args": [
                "trainer.limit_train_batches=1.0",
                "trainer.max_epochs=10",
                "model=conv-net-trax",
                "svd_rank_compression=4",
                "output_dir=trained_models/svd_rank4"
            ]
        },
        {
            "name": "backend",
            "type": "python",
            "request": "launch",
            "module": "hannah.train",
            "args": [
                "trainer.max_epochs=20",
                "module.num_workers=3",
                "model=conv-net-trax",
                "clustering=true",
                "normalizer=fixedpoint",
                "dataset=snips",
                "backend=trax_ut", 
                "backend.cols=8",
                "backend.standalone=True",
                "backend.rtl_simulation=False",
                "backend.synthesis=False",
                "backend.postsyn_simulation=False",
                "backend.power_estimation=False",
                "backend.num_inferences=1",
                "backend.period=1000",
                "backend.macro_type=RTL",
                "backend.backend_dir=/local/wernerju/tc-resnet8-accelerator",
                "backend.teda_dir=/local/wernerju/teda"
            ]
        }
            ]
        },
        {
            "name": "quantized",
            "type": "python",
            "request": "launch",
            "module": "hannah.train",
            "args": [
                "trainer.limit_train_batches=0.1",
                "trainer.max_epochs=20",
                "model=conv-net-trax"
            ]
        },
        {
            "name": "multi_gpu",
            "type": "python",
            "request": "launch",
            "module": "hannah.train",
            "args": [
                "trainer.gpus=[0,1]",
                "trainer.limit_train_batches=0.1",
                "trainer.limit_val_batches=0.1",
                "trainer.limit_test_batches=0.1",
                "trainer.max_epochs=3",
                "+trainer.strategy='ddp_spawn'"
            ]
        },
        {
            "name": "kd",
            "type": "python",
            "request": "launch",
            "module": "hannah.train",
            "args": [
                "--config-name",
                "config_kd",
                "trainer.limit_train_batches=0.1",
                "trainer.max_epochs=3",
                "model=tc-res4"
            ]
        },
        {
            "name": "object_detection",
            "type": "python",
            "request": "launch",
            "module": "hannah.train",
            "justMyCode": false,
            "args": [
                "--config-name",
                "config_object_detection",
                "dataset.data_folder=/local/datasets"
            ]
        },
    ]
}
